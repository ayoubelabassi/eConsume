<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0"
        android:background="@drawable/bordred_view"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/expence_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="4dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/expence_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="0"
                android:autoSizeTextType="uniform"
                android:drawableLeft="@drawable/ic_description"
                android:drawableTint="@color/colorPrimary"
                android:enabled="false"
                android:inputType="text"
                android:maxEms="20"
                android:paddingBottom="2dp"
                android:paddingTop="1dp"
                android:singleLine="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expence_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_attach_money"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:paddingBottom="2dp"
                        android:text="24.2"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/expence_qte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_import_export"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:paddingBottom="2dp"
                        android:text="4"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/expence_tot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_functions"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:paddingBottom="2dp"
                        android:text="220"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="0"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/expence_btn_edit"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_green_light"
                        android:foreground="@drawable/ic_edit"
                        android:foregroundTint="@color/white_color" />

                    <Button
                        android:id="@+id/expence_btn_delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_red_light"
                        android:foreground="@drawable/ic_delete"
                        android:foregroundTint="@color/white_color" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ev_txt_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="MAD"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>