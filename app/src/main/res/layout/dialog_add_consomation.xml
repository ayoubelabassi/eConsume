<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ayoubtadakker.tadakker.beans.suivi.add_consomation">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:background="@drawable/categorie_back"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/txt_cns_date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_addon"
            android:drawableLeft="@drawable/ic_event_black"
            android:drawablePadding="15dp"
            android:drawableTintMode="src_in"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="4dp" />

        <EditText
            android:id="@+id/txt_cns_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_addon"
            android:drawableLeft="@drawable/ic_title"
            android:drawablePadding="15dp"
            android:drawableTintMode="src_in"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="4dp" />

        <EditText
            android:id="@+id/txt_cns_desc"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_addon"
            android:drawableLeft="@drawable/ic_description"
            android:drawablePadding="15dp"
            android:drawableTint="@android:color/black"
            android:drawableTintMode="src_in"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_cns_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_addon"
                android:drawableLeft="@drawable/ic_attach_money"
                android:drawablePadding="15dp"
                android:drawableTintMode="src_in"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="4dp" />

            <EditText
                android:id="@+id/txt_cns_qte"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_addon"
                android:drawableLeft="@drawable/ic_trending_up"
                android:drawablePadding="15dp"
                android:drawableTintMode="src_in"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_cns_tot"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_addon"
                android:drawableLeft="@drawable/ic_functions"
                android:drawablePadding="15dp"
                android:drawableTintMode="src_in"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cns_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="@drawable/blue_button"
                android:text="@string/validate"
                android:textAllCaps="false"
                android:textColorLink="@android:color/background_light" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
