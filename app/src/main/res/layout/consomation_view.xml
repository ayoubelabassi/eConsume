<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:background="@drawable/categorie_back"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/consomation_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_addon"
            android:drawableLeft="@drawable/ic_title"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white_color"
            android:drawableTintMode="src_in"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:paddingLeft="6dp" />

        <EditText
            android:id="@+id/consomation_description"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_addon"
            android:drawableLeft="@drawable/ic_description"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white_color"
            android:drawableTintMode="src_in"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:paddingLeft="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/consomation_prix"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_addon"
                android:drawableLeft="@drawable/ic_attach_money"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white_color"
                android:drawableTintMode="src_in"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="6dp" />

            <EditText
                android:id="@+id/consomation_qte"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_addon"
                android:drawableLeft="@drawable/ic_trending_up"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white_color"
                android:drawableTintMode="src_in"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="6dp" />

            <EditText
                android:id="@+id/consomation_tot"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_addon"
                android:drawableLeft="@drawable/ic_functions"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white_color"
                android:drawableTintMode="src_in"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/holo_red_light"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/consomation_date"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_addon"
                android:drawableLeft="@drawable/ic_event_black"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white_color"
                android:drawableTintMode="src_in"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="6dp" />

            <Button
                android:id="@+id/consomation_btn_edit"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:background="@android:color/holo_green_light"
                android:foreground="@drawable/ic_edit"
                android:foregroundTint="@color/white_color" />

            <Button
                android:id="@+id/consomation_btn_delete"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:background="@android:color/holo_red_light"
                android:foreground="@drawable/ic_delete"
                android:foregroundTint="@color/white_color" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>