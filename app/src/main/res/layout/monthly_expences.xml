<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/me_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:clickable="true"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/me_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/me_txt_date"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="4"
            android:background="@drawable/text_view_addon"
            android:drawableLeft="@drawable/ic_month"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="1dp"
            android:paddingRight="0dp"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/me_linechart_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/me_date_layout"
        android:layout_centerVertical="false"
        android:gravity="center_vertical|center_horizontal">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/me_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
</RelativeLayout>